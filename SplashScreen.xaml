<Window
    x:Class="WpfApp1.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SplashScreen1"
    Width="450"
    Height="450"
    MinWidth="450"
    MinHeight="445"
    MaxWidth="450"
    MaxHeight="450"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Cursor="None"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="icon.png" Stretch="Uniform" />
    </Window.Background>
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                BeginTime="0:0:0"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:1" />
            <DoubleAnimation
                BeginTime="0:0:1"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="1"
                Duration="0:0:2" />
            <DoubleAnimation
                BeginTime="0:0:2"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>
    <Grid Background="Transparent">


        <RichTextBox
            Height="85"
            Margin="0,365,0,0"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderBrush="{x:Null}"
            Cursor="None"
            FontFamily="Gabriola">

            <FlowDocument>
                <Paragraph
                    Margin="0"
                    Padding="0"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center">
                    IR. Atelier
                </Paragraph>
                <Paragraph
                    Margin="0"
                    Padding="0"
                    FontFamily="Sitka Display"
                    FontSize="10"
                    FontStyle="Italic"
                    Foreground="#FF21365A"
                    TextAlignment="Center">
                    The name has Soul
                </Paragraph>
                <Section
                    Margin="0"
                    Padding="0"
                    FontSize="10"
                    FontStyle="Italic"
                    Foreground="#FF21365A"
                    TextAlignment="Center">
                    <Paragraph>
                        <Run Text="© 2025 IR. Atelier" />
                        <Run Text=" | " />
                        <Run Text="All rights reserved." />
                    </Paragraph>

                </Section>
            </FlowDocument>
        </RichTextBox>


    </Grid>
</Window>
