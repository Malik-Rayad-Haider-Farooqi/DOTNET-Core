<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Main"
    Title="ToDew"
    Width="800"
    Height="450"
    MinWidth="650"
    MinHeight="300"
    Background="#FFD9BE9A"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <DockPanel LastChildFill="False">
        <StatusBar
            Height="20"
            Panel.ZIndex="10000"
            Background="#4cff00"
            DockPanel.Dock="Bottom">
            <Grid Width="{Binding ActualWidth, ElementName=Main}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="statusTaskStatus"
                    Grid.Column="0"
                    Margin="0,0,20,0"
                    Text="{Binding taskStatus, Mode=OneWay}"
                    ToolTip="Status" />

                <TextBlock
                    x:Name="statusTaskTime"
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    Text="{Binding taskTime, Mode=OneWay}"
                    ToolTip="Cuurent Task Time" />
                <TextBlock
                    x:Name="statusTaskDate"
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    Text="{Binding taskDate, Mode=OneWay}"
                    ToolTip="Cuurent Task Date" />
                <TextBlock
                    x:Name="statusTaskCount"
                    Grid.Column="3"
                    Margin="0,0,20,0"
                    ToolTip="Today Task Completion Rate">
                    <TextBlock>
                        <Run Text="Items : " />
                        <Run Text="{Binding taskCount, Mode=OneWay}" />
                    </TextBlock>
                </TextBlock>
                <TextBlock
                    x:Name="Companyname"
                    Grid.Column="4"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    Text="Creation of Love By ❤️ IR. Atelier ❤️"
                    ToolTip="Creation of Love" />
            </Grid>
        </StatusBar>
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Sort By: " />
            <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                SelectedIndex="0">
                <ComboBoxItem Content="Name" />
                <ComboBoxItem Content="Date" />
                <ComboBoxItem Content="Status" />

            </ComboBox>
        </Grid>
        <DockPanel x:Name="MainPanel" LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Background="#FFBE7328"
                    BorderBrush="#FFD9BE9A"
                    Click="Button_Click"
                    Content="Add Task"
                    DockPanel.Dock="Top"
                    FontFamily="Jameel Noori Nastaleeq"
                    FontSize="16"
                    FontWeight="Bold" />
                <Button
                    x:Name="filterButton"
                    Grid.Column="1"
                    Margin="2,0,2,0"
                    Background="#FFBE7328"
                    BorderBrush="#FFD9BE9A"
                    Click="filter_Click"
                    Content="Filters/Sorting"
                    DockPanel.Dock="Top"
                    FontFamily="Jameel Noori Nastaleeq"
                    FontSize="16"
                    FontWeight="Bold" />
                <Button
                    x:Name="SettigsButton"
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    Background="#FFBE7328"
                    BorderBrush="#FFD9BE9A"
                    Click="SettigsButton_Click"
                    Content="Settings"
                    DockPanel.Dock="Top"
                    FontFamily="Jameel Noori Nastaleeq"
                    FontSize="16"
                    FontWeight="Bold" />
            </Grid>


            <ScrollViewer DockPanel.Dock="Top" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <StackPanel Name="TaskWindow">
                    <ItemsControl ClipToBounds="True" ItemsSource="{Binding TaskWidgets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:AddTask />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>


        </DockPanel>
    </DockPanel>
</Window>
